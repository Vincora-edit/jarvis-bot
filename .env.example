# ============================================
# JARVIS BOT - ENVIRONMENT CONFIGURATION
# ============================================
# Скопируйте этот файл в .env и заполните значения

# === TELEGRAM BOT ===
BOT_TOKEN=your_telegram_bot_token_here
OWNER_TELEGRAM_ID=your_telegram_id_here
ADMIN_IDS=123456789,987654321

# === OPENAI (для AI функций) ===
OPENAI_API_KEY=your_openai_api_key_here

# === GOOGLE ===
FINANCE_SHEET_NAME=Финансы
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://your-domain.com/oauth/callback

# === SETTINGS ===
TIMEZONE=Europe/Moscow

# ============================================
# VPN CONFIGURATION (НОВЫЙ МОДУЛЬ)
# ============================================

# Домен для subscription URL (клиенты получают конфиги отсюда)
# Пример: vpn.jarvis.bot
VPN_SUBSCRIPTION_DOMAIN=vpn.yourdomain.com

# Секрет для подписи токенов (сгенерируйте случайную строку 32+ символа)
VPN_SUBSCRIPTION_SECRET=your-random-secret-string-here-make-it-long

# ============================================
# VPN SERVERS (JSON массив)
# ============================================
# Пример конфигурации:
VPN_SERVERS='[
  {
    "id": "eu1",
    "name": "Европа 1",
    "location": "Германия",
    "host": "123.45.67.89",
    "ssh_port": 22,
    "ssh_user": "root",
    "ssh_password": "your-ssh-password",
    "xray_api_port": 10085,
    "inbound_port": 443,
    "inbound_tag": "vless-reality",
    "reality_private_key": "YOUR_X25519_PRIVATE_KEY",
    "reality_public_key": "YOUR_X25519_PUBLIC_KEY",
    "reality_short_id": "abc123",
    "reality_server_name": "www.google.com",
    "priority": 10,
    "max_users": 1000
  }
]'

# ============================================
# LEGACY MARZBAN (fallback если VPN_SERVERS пуст)
# ============================================
MARZBAN_HOST=72.56.88.242
MARZBAN_PORT=8000
MARZBAN_ADMIN_USERNAME=admin
MARZBAN_ADMIN_PASSWORD=your-marzban-password

# ============================================
# ADMIN PANEL
# ============================================
ADMIN_PANEL_USERNAME=admin
ADMIN_PANEL_PASSWORD=your-admin-password
ADMIN_PANEL_SECRET=your-session-secret

# ============================================
# ГЕНЕРАЦИЯ REALITY КЛЮЧЕЙ
# ============================================
# На VPN сервере выполните: xray x25519
# Private key -> reality_private_key (в конфиг Xray)
# Public key -> reality_public_key (для клиентов)
